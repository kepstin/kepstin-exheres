require pypi setup-py [ import=setuptools test=pytest ]

SUMMARY="An implementation of JSON Schema validation for Python"
DESCRIPTION="
jsonschema is an implementation of JSON Schema for Python.

Features
  * Full support for Draft 3 and Draft 4 of the schema.
  * Lazy validation that can iteratively report all validation errors.
  * Small and extensible
  * Programmatic querying of which properties or items failed validation.
"
HOMEPAGE="http://github.com/Julian/jsonschema"

LICENCES="MIT"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

DEPENDENCIES="
    suggestions:
        dev-python/rfc3987[python_abis:*(-)?] [[ description = [ Enable the uri format checker ] ]]
        dev-python/strict-rfc3339[python_abis:*(-)?] [[ description = [ Enable the date-time format checker ] ]]
        dev-python/webcolors[python_abis:*(-)?] [[ description = [ Enable the color format checker ] ]]
        
"

BUGS_TO=""

PYTEST_PARAMS=( jsonschema )

