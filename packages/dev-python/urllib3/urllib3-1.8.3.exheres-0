require pypi
require setup-py [ import=setuptools blacklist=3.1 test=nose ]

SUMMARY="HTTP library with thread-safe connection pooling, file post, and more."
HOMEPAGE="http://urllib3.readthedocs.org/"

LICENCES="MIT"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

# urllib3 tests fail unless they get 100% coverage, and need exact dependencies
# in order to do so.
RESTRICT="test"

DEPENDENCIES="
    test:
        dev-python/nose[>=1.3][python_abis:*(-)?]
        dev-python/mock[>=1.0.1][python_abis:*(-)?]
        dev-python/tornado[>=3.1.1][python_abis:*(-)?]
        dev-python/coverage[>=3.6][python_abis:*(-)?]
"

