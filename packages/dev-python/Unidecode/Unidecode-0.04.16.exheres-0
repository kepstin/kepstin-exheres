require setup-py [ import=distutils ] pypi

SUMMARY="ASCII transliterations of Unicode text"
DESCRIPTION="
Unidecode provides a method that takes Unicode text and tries to
represent it in ASCII characters, where the compromises taken when
mapping between two characters sets are chosen to be near what a human
with a US keyboard would choose.
"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

setup-py_test_one_multibuild() {
    edo ${PYTHON} -B setup.py test
}

