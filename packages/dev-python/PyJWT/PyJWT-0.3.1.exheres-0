require pypi
require setup-py [ import=setuptools blacklist=3.1 has_bin=true ]

SUMMARY="JSON Web Token implementation in Python"
HOMEPAGE="http://github.com/progrium/pyjwt"

LICENCES="MIT"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

# Tests are missing from the distributed tarball
RESTRICT="test"

DEPENDENCIES="
    test:
        dev-python/pycrypto[python_abis:*(-)?]
        dev-python/ecdsa[python_abis:*(-)?]
    suggestion:
        dev-python/pycrypto[python_abis:*(-)?] [[
            description = [ Support the RSASSA-PKCS1-v1_5 algorithms ] ]]
        dev-python/ecdsa[python_abis:*(-)?] [[
            description = [ Support the Elliptic Curve Digital Signature algorithms ] ]]
"

